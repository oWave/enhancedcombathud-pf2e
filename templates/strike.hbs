<div>
  {{#if hasConfig}}
  <div class="ech-strike-config">
    <div class="ech-strike-config-header">
      <i class="fa-solid fa-{{selectedVersatileOption.glyph}} fa-fw icon"></i>
      <i class="fa-solid fa-chevron-up"></i>
    </div>
    <div class="ech-strike-config-content">
      {{#if versatileOptions}}
          <p>Damage</p>
          <div style="display: flex;" class="versatile-options">
          {{#each versatileOptions}}
            <button type="button" class="{{#if this.selected}}selected{{/if}}" data-tooltip="{{localize this.label}}" value="{{this.value}}" data-action="toggle-versatile" {{disabled this.selected}}>
              <i class="fa-solid fa-{{this.glyph}} fa-fw icon"></i>
            </button>
        {{/each}}
          </div>
      {{/if}}
      <div class="collapse">
        <i class="fa-solid fa-chevron-down"></i>
      </div>
    </div>
  </div>
  {{/if}}
  <div style="display: flex; flex-direction: column; width: 100%; align-items: stretch;" class="action-element ech-blur">
    {{#each buttons}}
      <button class="ech-strike-button" data-index="{{this.index}}">
          {{#if this.index}}
            <span>{{this.label}}</span>
          {{else}}
            <span>Strike <span class="action-glyph">{{this.glyph}}</span> {{this.label}}</span>
          {{/if}}
        </button>
    {{/each}}
    <div style="display: flex; align-items: center;">
      <img src="{{icon}}" style="height: 30px;">
      <span>{{label}}</span>
    </div>
</div>
